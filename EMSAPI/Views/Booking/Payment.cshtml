@model EMSAPI.Models.Event

@{
    ViewBag.Title = "Payment";
}


<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body style="background-image : url('https://kinsta.com/wp-content/uploads/2020/04/wordpress-events-plugin-1.jpg')">

    <h2>Payment</h2>
    <div class="jumbotron jumbotron-fluid">
        <div class="table-responsive">
            <table class="table">
                <tr class="active">
                    <th>@Html.DisplayNameFor(model => model.EVENTNAME)</th>
                    <th>@Html.DisplayNameFor(model => model.EVENTTYPE)</th>
                    <th>@Html.DisplayNameFor(model => model.EVENTSTARTDATE)</th>
                    <th>@Html.DisplayNameFor(model => model.EVENTENDDATE)</th>
                    <th>@Html.DisplayNameFor(model => model.EVENTCOST)</th>
                    <th>@Html.DisplayNameFor(model => model.EVENTMANAGEMENTCOST)</th>
                    <th>@Html.DisplayNameFor(model => model.EVENTCONSULTANTCOST)</th>
                </tr>

                <tr class="active">
                    <td>@Html.DisplayFor(model => model.EVENTNAME)</td>
                    <td>@Html.DisplayFor(model => model.EVENTTYPE)</td>
                    <td>@Html.DisplayFor(model => model.EVENTSTARTDATE)</td>
                    <td>@Html.DisplayFor(model => model.EVENTENDDATE)</td>
                    <td>@Html.DisplayFor(model => model.EVENTCOST)</td>
                    <td>@Html.DisplayFor(model => model.EVENTMANAGEMENTCOST)</td>
                    <td>@Html.DisplayFor(model => model.EVENTCONSULTANTCOST)</td>
                </tr>
            </table>
            
        </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.EVENTID)
                    @Html.HiddenFor(model => model.EVENTNAME)
                    @Html.HiddenFor(model => model.EVENTTYPE)
                    @Html.HiddenFor(model => model.EVENTCOST)
                    @Html.HiddenFor(model => model.EVENTCONSULTANTCOST)
                    @Html.HiddenFor(model => model.EVENTMANAGEMENTCOST)
                    @Html.HiddenFor(model => model.EVENTSTARTDATE)
                    @Html.HiddenFor(model => model.EVENTENDDATE)

                <div align="center">
                    <div class="form-group">
                        <h4>ENTER AMOUNT</h4>
                        <div class="col-md-10" style="margin-left:90px;">
                            @Html.EditorFor(model => model.EVENTWALLET, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EVENTWALLET, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="margin-left:90px;">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                </div>
            }
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </body>
    </html>


