@model IEnumerable<EMSAPI.Models.Booking>

@{
    ViewBag.Title = "Bookings";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body style="background-image : url('https://kinsta.com/wp-content/uploads/2020/04/wordpress-events-plugin-1.jpg')">
    <h2>Bookings</h2>
    <div class="jumbotron jumbotron-fluid">
        <div class="table-responsive">
            <table class="table">
                <tr class="active">
                    <th>
                        @Html.DisplayNameFor(model => model.EVENTID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.USERID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BOOKINGDATE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PAYMENTSTATUS)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="active">
                        @if (Session["USERID"].Equals(item.USERID.ToString()))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.EVENTID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.USERID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BOOKINGDATE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PAYMENTSTATUS)
                            </td>
                            <td>
                                @Html.ActionLink("Payment", "Payment", new { id = item.BOOKINGID }, new { @class = "btn btn-success"}) 
                                @Html.ActionLink("Details", "Details", new { id = item.BOOKINGID }, new { @class = "btn btn-success" }) 
                                @Html.ActionLink("Cancel", "Cancel", new { id = item.BOOKINGID }, new { @class = "btn btn-danger" })
                            </td>
                        }

                    </tr>
                }

            </table>
            </div>
        </div>
            <h3>@Html.ActionLink("Back to List", "Index")</h3>
</body>
</html>



